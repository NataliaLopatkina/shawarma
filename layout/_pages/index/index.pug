html(lang="ru")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="initial-scale=1.0, width=device-width")
        title Shawarma
        link(href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300i,700&display=swap&subset=cyrillic" rel="stylesheet")
        link(rel="stylesheet" href="stylesheets/index.min.css")
    
    body(class="page")
        include ../../_blocks/header/header.pug
        +header(obj)

        main(class="main")
            include ../../_blocks/slider/slider.pug

            include ../../_blocks/products/products.pug
            +products(obj) 

            include ../../_blocks/ceo/ceo.pug
            +ceo(obj)

            include ../../_blocks/promotions/promotions.pug
            +promotions()

            include ../../_blocks/map/map.pug
            +map()

        include ../../_blocks/footer/footer.pug
        +footer()

        include ../../_blocks/popup-order/popup-order.pug
        +popup-order()

        include ../../_blocks/popup-payment/popup-payment.pug
        +popup-payment()

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js")
        script(src="scripts/common.js")
